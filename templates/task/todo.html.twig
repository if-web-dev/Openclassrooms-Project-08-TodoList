{% extends 'base.html.twig' %}

{% block head_title %}
Tasks to do
{% endblock %}

{% block body %}
<main class="container d-flex flex-column">

    <div class="row bg-todo-1 p-4 align-items-center rounded-3 border shadow-lg m-3">
        <ul class="list-group p-0">
            <li class="list-group-item align-items-center">
                <a href="{{ path('tasks_list') }}" class="d-flex justify-content-between w-100 text-decoration-none fw-bold">
                    Tasks List
                    <span class="badge bg-todo-1 rounded-pill">
                        {{ tasks|length }}
                    </span>
                </a>

            </li>
            <li class="list-group-item align-items-center">
                <a href="{{ path('tasks_completed') }}"
                    class="d-flex justify-content-between w-100 text-decoration-none fw-bold">
                    Tasks done
                    <span class="badge bg-todo-1 rounded-pill" id="tasks-done-number">
                        {{ tasks_done_number }}
                    </span>
                </a>

            </li>
            <li class="list-group-item align-items-center">
                <a href="{{ path('tasks_to_do') }}" class="d-flex justify-content-between w-100 text-decoration-none fw-bold">
                    Tasks to do
                    <span class="badge bg-todo-1 rounded-pill" id="tasks-to-do-number">
                        {{ tasks_to_do_number }}
                    </span>
                </a>
            </li>
            <li class="list-group-item align-items-center">
                <a href="{{ path('task_create') }}" class="d-flex justify-content-between w-100 text-decoration-none fw-bold">
                    Add a Task
                    <span class="badge bg-todo-1 rounded-pill">+</span>
                </a>
            </li>
        </ul>
    </div>

    {% if tasks_to_do is empty %}
    <div class="mx-3 m-3">
        <div class="alert alert-warning d-flex align-items-center mb-0" role="alert">
            There is no task to do <a href="{{ path('task_create') }}" class="btn btn-warning ms-auto">Create a task</a>
        </div>
    </div>
    {% endif %}

    <div class="px-4 m-3 text-center border-bottom shadow-bottom">
        <h1 class="display-4 fw-bold">Tasks to do</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Here is tasks to do !</p>
        </div>
        <div class="overflow-hidden" style="max-height: 30vh;">
            <div class="container px-5">
                <img src="{{ asset('img/todo-banner-2.png') }}" class="img-fluid rounded-3 mb-4" alt="Example image"
                    width="700" height="500" loading="lazy">
            </div>
        </div>
    </div>

    <section class="row mt-3 justify-content-center">
        {% for task in tasks_to_do %}
        <div class="col-md-6 col-xl-4">
            <div class="card text-white bg-todo-1 m-3">
                <div class="card-header">
                    {% if task.user == null %}
                        Anonymous
                    {% else %}
                        {{ task.user.username }}
                    {% endif %} 
                    <span class="status-picto shadow" data-task-id="{{ task.id }}">
                        {% if task.isDone %}
                        <img src="img/todo-and-co-logo-blue.svg" width="100%">
                        {% else %}
                        <img src="img/todo-and-co-cross.svg" width="100%">
                        {% endif %}
                    </span>
                </div>
                <div class="card-body">
                    <h5><a href="{{ path('task_edit', {'id' : task.id }) }}" class="task-title">{{task.title|capitalize}}</a></h5>
                    <p class="card-text">
                        {{task.content}}
                    </p>
                    <div class="d-flex">
                        <button class="btn btn-success btn-sm mb-1 me-2 toggle" data-task-id="{{ task.id }}" data-is-done="{{ task.isDone ? 1 : 0 }}">
                            {% if task.isDone %}Marked as to do{% else %}Marked as done{% endif %}
                        </button>                    
                        {% if is_granted("TASK_MODIFY", task) %}
                        <form method="post" action="{{ path('task_delete', {'id': task.id}) }}">
                            <button class="btn btn-danger btn-sm mb-1">Delete</button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
</main>
   
{% endblock %}

{% block javascript %}
<script>
    $(document).ready(function() {
        $('.toggle').click(function(e) {
            var button = $(this);
            
            let taskId = button.data('task-id');
            let isDone = button.data('is-done');
            let toDoNumber = $('#tasks-to-do-number');
            let doneNumber = $('#tasks-done-number');

            e.preventDefault();


            $.ajax({
                url: '/tasks/' + taskId + '/toggle',
                method: 'GET',
                dataType: 'json',
                success: function(data) {
                    if (isDone) {
                        button.text("Marked as done");
                        $('.status-picto[data-task-id="' + taskId + '"]').html('<img src="img/todo-and-co-cross.svg" width="100%">');
                        let currentDoneNumber = parseInt(doneNumber.text());
                        let newDoneNumber = currentDoneNumber - 1;
                        doneNumber.text(newDoneNumber);

                        let currentToDoNumber = parseInt(toDoNumber.text());
                        let newToDoNumber = currentToDoNumber + 1;
                        toDoNumber.text(newToDoNumber);
                    } else {
                        button.text("Marked as to do");
                        $('.status-picto[data-task-id="' + taskId + '"]').html('<img src="img/todo-and-co-logo-blue.svg" width="100%">');
                        let currentDoneNumber = parseInt(doneNumber.text());
                        let newDoneNumber = currentDoneNumber + 1;
                        doneNumber.text(newDoneNumber);

                        let currentToDoNumber = parseInt(toDoNumber.text());
                        let newToDoNumber = currentToDoNumber - 1;
                        toDoNumber.text(newToDoNumber);
                    }

                    button.data('is-done', !isDone);

                    alert(data.message);
        
                },
                error: function(xhr, status, error) {
                    console.error(error);
                }
            });
        });
    });
</script>
{% endblock %}
